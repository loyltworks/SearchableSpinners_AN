<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SearchableDropdown">
        <!--Search dialog attributes-->
        <attr name="SearchDialog_Background" format="reference"/>

        <!--Dropdown attributes-->
        <attr name="Dropdown_background" format="reference"/>
        <attr name="Dropdown_TextColor" format="color"/>
        <attr name="Dropdown_TextSize" format="integer"/>
        <attr name="Dropdown_Icon" format="reference"/>
        <attr name="Dropdown_IconHeight" format="integer"/>
        <attr name="Dropdown_IconWidth" format="integer"/>
        <attr name="Dropdown_IconColor" format="color"/>

        <!--SearchLayout attributes-->
        <attr name="SearchLayout_background" format="reference"/>
        <attr name="SearchLayout_TextColor" format="color"/>
        <attr name="SearchLayout_TextSize" format="integer"/>
        <attr name="SearchLayout_Icon" format="reference"/>
        <attr name="SearchLayout_IconHeight" format="integer"/>
        <attr name="SearchLayout_IconWidth" format="integer"/>
        <attr name="SearchLayout_IconColor" format="color"/>
        <attr name="SearchLayout_ClearIcon" format="reference"/>
        <attr name="SearchLayout_ClearIconHeight" format="integer"/>
        <attr name="SearchLayout_ClearIconWidth" format="integer"/>
        <attr name="SearchLayout_ClearIconColor" format="color"/>

        <!--RecyclerView attributes-->
        <attr name="SearchList_background" format="reference"/>
        <attr name="SearchList_TextColor" format="color"/>
        <attr name="SearchList_TextSize" format="integer"/>

        <!--Closebutton attributes-->
        <attr name="CloseButton_background" format="reference"/>
        <attr name="CloseButton_TextColor" format="color"/>
        <attr name="CloseButton_TextSize" format="integer"/>


    </declare-styleable>
</resources>